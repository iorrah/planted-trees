<div class="item-content">
  <img src="assets/images/gallery/placeholder.gif">
  <img src="{{tree.image}}" class="{{if tree.is_hidden 'ghost'}}">
  <div class="overlay" {{action 'showInModal' tree}}></div>

  <div class="caption top">
    <div class="actions">
      <div class="visibility">
        {{#if tree.is_hidden}}
          <button class="btn btn-subtle"
                  {{action 'toggleVisibility'}}>
            <i class="fa fa-eye" aria-hidden="true"></i>
          </button>
        {{else}}
          <button class="btn btn-subtle"
                  {{action 'toggleVisibility'}}>
            <i class="fa fa-eye-slash" aria-hidden="true"></i>
          </button>
        {{/if}}
      </div>
    </div>
  </div>

  <div class="caption bottom">
    <p>
      {{tree.name}}<br />
      <small>{{tree.species_name}}</small>
    </p>

    <div class="actions">
      <div class="heart {{if tree.liked 'is-active'}}" {{action 'toggleLike'}}></div>
    </div>
  </div>
</div>
