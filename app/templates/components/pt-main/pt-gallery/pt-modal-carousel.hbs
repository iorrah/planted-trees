<div id="modal-carousel"
     class="carousel slide gallery-modal-carousel"
     data-ride="carousel"
     data-interval="false">
  <div class="carousel-inner">
    {{#each trees as |item|}}
      <div class="item" id="item-{{item.external_id}}">
        <img src="{{item.image}}">

        <div class="captions">
          <h3>
            {{item.name}},

            <small>
              <i>{{item.species_name}}</i>
            </small>
          </h3>

          <button type="button" class="btn btn-success" {{action 'toggleLike' item}}>
            Like
            <span class="badge badge-pill badge-light">{{item.likes}}</span>
          </button>
        </div>
      </div>
    {{/each}}
  </div>

  <a class="carousel-control-prev" href="#modal-carousel" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true">
      <i class="fa fa-angle-left" aria-hidden="true"></i>
    </span>

    <span class="sr-only">Previous</span>
  </a>

  <a class="carousel-control-next" href="#modal-carousel" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true">
      <i class="fa fa-angle-right" aria-hidden="true"></i>
    </span>

    <span class="sr-only">Next</span>
  </a>
</div>
